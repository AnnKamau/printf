#include "main.h"
#include <stdio.h>
#include <stdarg.h>

/**
* _printf - function that produces output 
* /

int _printf(const char *format, ...)
{
	int count = 0;

	va_list args;

	va_start(args, format);

	while (*format != '\0')
	{
		if (*format != '%')
		{
			_putchar(*format);
			count++;
		}
		else
		{
			format++;

			switch (*format)
		{
		case 'c':
			_putchar(va_arg(args, int));
			count++;
			break;

		case 's':
		{

			char *str = va_arg(args, char *);
			while (*str != '\0')
			{
				_putchar(*str);
				str++;
				count++;
			}
			break;
		}

		case '%':
			_putchar('%');
			count++;
			break;

		default:
			printf("Invalid format specifier\n");
			return (-1);
		}
	}

		format++;
	}

	va_end(args);

	return (count);
}
